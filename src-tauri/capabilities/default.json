{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "http:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "shutdown-linux",
          "cmd": "shutdown",
          "args": ["now"]
        },
        {
          "name": "shutdown-macos",
          "cmd": "osascript",
          "args": ["-e", "tell app \"System Events\" to shut down"]
        },
        {
          "name": "shutdown-windows",
          "cmd": "shutdown",
          "args": ["/s", "/t", "0"]
        }
      ]
    }
  ]
}
